<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
<button><a href ="/art">Артефакты</a></button>
<button><a href ="/arh">Археологи</a></button>
<button><a href ="/place">Места раскопок</a></button>
<button><a href ="/find/place">Место раскопок артефакта</a></button>
{% if app.request.get('_route') != 'app_login' and app.request.get('_route') != 'app_register' %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="/logout">Выйти</a><br>
    {% else %}
       <button> <a href="/login">Войти</a></button>
        <button><a href="/register">Зарегистрироваться</a></button>
    {% endif %}
{% endif %}
        {% block body %}{% endblock %}
        
    </body>
</html>
