{% extends 'base.html.twig' %}

{% block title %}FindPlace index{% endblock %}

{% block body %}
    <h1>FindPlace index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Артефакт</th>
                <th>Место раскопок</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for find_place in find_places %}
            <tr>
                <td>{{ find_place.id }}</td>
                <td>{{ find_place.artName }}</td>
                <td>{{ find_place.place }}</td>
                <td>
                    <a href="{{ path('app_find_place_show', {'id': find_place.id}) }}">show</a>
                    <a href="{{ path('app_find_place_edit', {'id': find_place.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_find_place_new') }}">Create new</a>
{% endblock %}
