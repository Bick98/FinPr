{% extends 'base.html.twig' %}

{% block title %}Артефакты{% endblock %}

{% block body %}
    <h1>Артефакты</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Артефакт</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for art in art %}
            <tr>
                <td>{{ art.id }}</td>
                <td>{{ art.artName }}</td>
                <td>
                    <a href="{{ path('app_art_show', {'id': art.id}) }}">show</a>
                    <a href="{{ path('app_art_edit', {'id': art.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_art_new') }}">Create new</a>
{% endblock %}
